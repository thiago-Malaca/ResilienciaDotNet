{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Splunk",
      "Serilog.Sinks.Console"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@Message like '%Hystrix Metrics%'"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "EventCollector",
        "Args": {
          "splunkHost": "http://localhost:8088",
          "eventCollectorToken": "b90b4a73-30ba-4137-841c-671652d50ef7"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Resiliente.ServicoA",
      "Comunidade": "Câmbio",
      "Sigla": "BA",
      "ProdutoDigital": "Precificação"
    }
  },
  "management": {
    "security": {
      "enabled": false
    },
    "endpoints": {
      "actuator": {
        "exposure": {
          "include": "*"
        }
      }
    }
  },
  "spring": {
    "application": {
      "name": "Resiliente.ServiceA"
    }
  },
  "eureka": {
    "client": {
      "serviceUrl": "http://localhost:8761/eureka",
      "ValidateCertificates": false
    }
  },
  "hystrix": {
    "client": {
      "uri": "amqp://guest:guest@localhost:5672/"
    },
    "command": {
      "default": {
        "execution": {
          "timeout": {
            "enabled": true
          },
          "isolation": {
            "strategy": "THREAD",
            "thread": {
              "timeoutInMilliseconds": 3000
            }
          }
        },
        "circuitBreaker": {
          "enabled": true,
          "requestVolumeThreshold": 30,
          "sleepWindowInMilliseconds": 10000,
          "errorThresholdPercentage": 50
        },
        "_metrics": {
          "rollingStats": {
            "timeInMilliseconds": 30000
          }
        }
      }
    },
    "threadpool": {
      "default": {
        "coreSize": 40,
        "maximumSize": 40,
        "maxQueueSize": -1,
        "queueSizeRejectionThreshold": 40,
        "keepAliveTimeMinutes": 1,
        "allowMaximumSizeToDivergeFromCoreSize": true
      }
    }
  },
  "AllowedHosts": "*"
}